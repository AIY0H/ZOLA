// ==UserScript==
// @name         ZOLA - Zero Overlays, Liberated Audio üéß
// @namespace    http://tampermonkey.net/
// @version      1.1
// @description  Supprime un titre sp√©cifique et ajoute une scrollbar sur toutes les pages de lesite.com
// @author       AIY0H
// @match        https://www.epidemicsound.com/*
// @grant        none
// ==/UserScript==

(function () {
    'use strict';

    function removeTrialElements() {
        const modal = document.querySelector('div[role="dialog"][aria-labelledby="lockoutBasicUserModalTitle"]');
        if (modal) modal.remove();

        const backdrop = document.querySelector('div._backdrop_14j92_170');
        if (backdrop) backdrop.remove();
    }

    function enableScrollbar() {
        document.body.style.overflow = 'auto';
        document.documentElement.style.overflow = 'auto';
        document.body.style.height = 'auto';
        document.documentElement.style.height = 'auto';
        console.log("‚úÖ Scroll activ√©");
    }

    window.addEventListener('load', () => {
        removeTrialElements();
        enableScrollbar();
    });

    const observer = new MutationObserver(() => {
        removeTrialElements();
        enableScrollbar(); // on le remet ici aussi, au cas o√π le style soit r√©appliqu√© dynamiquement
    });

    observer.observe(document.body, { childList: true, subtree: true });
})();
